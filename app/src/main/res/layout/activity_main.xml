<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_deviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试DeviceId" />

            <Button
                android:id="@+id/btn_mock_privacy_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模拟点击隐私协议确定" />

            <Button
                android:id="@+id/btn_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试Imei" />

            <Button
                android:id="@+id/btn_imsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试Imsi" />

            <Button
                android:id="@+id/btn_mac_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试mac地址" />

            <Button
                android:id="@+id/btn_iccid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试sim卡唯一标识符" />

            <Button
                android:id="@+id/btn_installed_packages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试已安装包列表" />

            <Button
                android:id="@+id/btn_main_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试当前进程是主进程" />

            <Button
                android:id="@+id/btn_test_cms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试剪贴板服务" />

            <Button
                android:id="@+id/btn_test_ams_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试读取运行中的进程" />

            <Button
                android:id="@+id/btn_force_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结束当前检测-导出结果" />

            <Button
                android:id="@+id/btn_export_excel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试导出excel" />

            <Button
                android:id="@+id/btn_test_processB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动进程B" />

            <Button
                android:id="@+id/btn_void_fun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预留的空方法测试" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>